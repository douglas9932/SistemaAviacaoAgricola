{
  "name": "site",
  "version": "1.0.0",
  "scripts": {
    "start": "concurrently \"npm run start-server\" \"npm run start-client\"",
    "start-server": "cd server && npm start",
    "start-client": "cd client && npm start",

    "startDev": "concurrently \"npm run startDev-server\" \"npm run startDev-client\"",
    "startDev-server": "cd server && npm run nodemon index.js",
    "startDev-client": "cd client && npm start"
  },
  "devDependencies": {
    "concurrently": "^x.x.x"
  }
}